@using GroceryShopWeb.Core.ViewModels.Product
@{
    ViewData["Title"] = "Product Prices";
}
<h1>@ViewData["Title"]</h1>
@model IEnumerable<ProductViewModel>

<div class="row">

    @foreach (var p in Model)
    {
            <div class="col-lg-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title text-center">@p.Name</h5>
                        <form method="post">
                            <input type="hidden" name="id" value="@p.Id">

                            <div class="form-group">
                                <label>Price</label>
                                <input value="@p.Price" name="price">
                            </div>
                            <hr>
                            <div class="form-group text-center">
                            <input class="btn btn-success" type="submit" value="Update Price">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    }
</div>

<div class="row text-center" style="padding-top: 50px;">

   <div class="col-lg-6 border border-success">
        <form method="post" action="/Shop/AddProduct" class="text-center">
            <h3>Add new Product</h3>
            <div class="form-group">
                <label class="form-label">Product Name</label>
                <input class="form-control" type="text" name="productName" />
            </div>
            <div class="form-group">
                <label class="form-label">Product Price</label>
                <input class="form-control" type="number" name="productPrice" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Add Product" class="btn btn-primary" />
            </div>
        </form>
   </div>
</div>
